<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.takeout.OrderSuccessActivity">
    <com.yjhh.common.view.TitleBarView android:layout_width="match_parent"

                                       android:id="@+id/tbv_title"
                                       app:textValue="订单详情"
                                       android:layout_height="wrap_content"/>

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_below="@+id/tbv_title"
                    android:layout_height="wrap_content">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">


            <TextView android:layout_width="match_parent"
                      android:gravity="center"
                      android:text="待骑手接单"
                      android:layout_height="wrap_content"/>

            <TextView android:layout_width="120dp"
                      android:gravity="center"
                      android:text="取消定订单"

                      android:layout_gravity="center"
                      android:layout_height="50dp"/>


        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>