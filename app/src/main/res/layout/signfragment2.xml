<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"

                                       android:orientation="vertical"
                                       app:cardCornerRadius="10pt"
                                       android:id="@+id/rl_title"
                                       android:layout_centerInParent="true"
                                       app:cardBackgroundColor="@color/white"
                                       android:layout_width="240pt"
                                       android:layout_height="127pt">


        <TextView android:layout_width="240pt"
                  android:id="@+id/tv_tips"
                  tools:text="1212121212"
                  android:layout_marginTop="27.5pt"
                  android:textColor="#FF333333"
                  android:textSize="12pt"
                  android:gravity="center"
                  android:layout_height="wrap_content"
        />
        
        <com.google.android.material.button.MaterialButton
                android:layout_height="wrap_content"
                android:layout_marginTop="61pt"
                app:cornerRadius="25pt"
                android:text="知道了"
                android:id="@+id/mb"
                android:textColor="#FFFFFFFF"
                android:textSize="17pt"
                app:rippleColor="@color/white"
                android:layout_gravity="center_horizontal"
                app:backgroundTint="#FFFFC536"
                android:background="#FFFFC536"
                android:layout_width="131pt"
        />
        


    </androidx.cardview.widget.CardView>
</RelativeLayout>