<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:background="#f7f7f9"
              android:layout_marginTop="20pt"
              android:layout_height="match_parent">
    <com.yjhh.common.view.TitleBarView android:layout_width="match_parent"
                                       android:id="@+id/tbv_title"
                                       app:textValue="待付款"
                                       android:layout_height="wrap_content"/>


    <RelativeLayout android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="111.5pt" android:layout_height="79pt"
                   android:layout_marginTop="30pt"
                   android:id="@+id/iv_image"
                   android:background="@drawable/daifukuan"
                   android:layout_centerHorizontal="true"
        />


        <TextView
                android:layout_width="81.5pt"
                android:layout_marginTop="17pt"
                android:layout_below="@+id/iv_image"
                android:layout_height="25pt"
                android:layout_centerHorizontal="true"
                android:text="￥128.50"
                android:layout_marginBottom="24pt"
                android:textColor="#FFFF552E"
                android:textSize="19pt"
        />

    </RelativeLayout>


    <TextView android:layout_width="match_parent" android:layout_height="30pt"
              android:text="选择支付方式"
              android:textColor="#FF666666"
              android:textSize="12pt"
              android:gravity="center_vertical"
              android:paddingLeft="15pt"
    />


    <RadioGroup android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15pt"
                android:background="@color/white"
                android:paddingRight="15pt"
                android:layout_height="90.5pt">
        <RadioButton android:layout_width="match_parent"
                     android:textColor="#FF333333"
                     android:textSize="14pt"
                     android:button="@null"
                     android:checked="true"
                     android:drawableRight="@drawable/selector_radio"
                     android:drawablePadding="8pt"
                     android:paddingTop="12.5pt"
                     android:paddingBottom="12.5pt"
                     android:drawableLeft="@drawable/zhifubaozhifu"
                     android:layout_height="wrap_content"
                     android:id="@+id/rb_alipay"
                     android:text="支付宝"
        />

        <View
                android:layout_width="327pt"
                android:layout_gravity="center_horizontal"
                android:layout_height="0.5pt"
                android:background="#FFE6E6E6"
        />

        <RadioButton android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/rb_wxpay"
                     android:drawablePadding="8pt"
                     android:button="@null"
                     android:drawableRight="@drawable/selector_radio"
                     android:paddingTop="12.5pt"
                     android:paddingBottom="12.5pt"
                     android:textColor="#FF333333"
                     android:drawableLeft="@drawable/weixinzhifu"
                     android:textSize="14pt"
                     android:text="微信支付"
        />

    </RadioGroup>


    <TextView android:layout_width="300pt"
              android:layout_gravity="center_horizontal"
              android:text="确认支付（￥128.50）"
              android:textColor="#FFFFFFFF"
              android:background="@drawable/button034"
              android:gravity="center"
              android:id="@+id/tv_pay"
              android:textSize="16pt"
              android:layout_marginTop="64pt" android:layout_height="39pt"

    />


</LinearLayout>