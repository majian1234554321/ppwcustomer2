<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:padding="@dimen/sp_16"
                android:layout_height="wrap_content">

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_name"
              android:paddingBottom="@dimen/sp_12"
              android:layout_marginRight="@dimen/sp_16"
              android:text="张三"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/tv_name"
              android:id="@+id/tv_phone"
              android:text="18888888888"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="1212"
              android:id="@+id/tv_tag"
              android:paddingLeft="@dimen/sp_12"
              android:paddingRight="@dimen/sp_12"
              android:layout_marginRight="@dimen/sp_12"
              android:layout_below="@+id/tv_name"
              android:background="@drawable/stroke_search"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_address"
              android:layout_toRightOf="@+id/tv_tag"
              android:gravity="center_vertical"
              android:layout_marginRight="@dimen/sp_12"
              android:layout_alignBottom="@+id/tv_tag"
              android:layout_below="@+id/tv_name"
              android:text="万达国际总部"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_no"
              android:gravity="center_vertical"
              android:layout_alignBottom="@+id/tv_tag"
              android:layout_below="@+id/tv_name"
              android:layout_toRightOf="@+id/tv_address"
              android:text="xxx"
    />


    <ImageView

            android:src="@drawable/arrow_right_48"
            android:layout_alignParentRight="true"

            android:layout_centerVertical="true"
            android:layout_width="wrap_content" android:layout_height="wrap_content"/>


</RelativeLayout>