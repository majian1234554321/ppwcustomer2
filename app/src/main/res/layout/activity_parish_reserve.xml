<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.takeout.PaySuccessActivity">

    <com.yjhh.common.view.TitleBarView android:layout_width="match_parent"
                                       android:id="@+id/tbv_title"
                                       app:textValue="堂食预定"
                                       app:textColor="@color/white"
                                       android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_above="@+id/tv_commit"
                  android:layout_below="@+id/tbv_title"
                  android:layout_height="match_parent">


        <com.google.android.material.tabs.TabLayout
                android:layout_width="match_parent"
                android:id="@+id/mTabLayout"
                app:tabIndicatorHeight="0dp"
                android:background="@color/white"
                app:tabSelectedTextColor="@color/colorPrimary"
                app:tabBackground="@color/white"
                app:tabGravity="center"
                android:layout_height="70dp"/>


        <View android:layout_width="match_parent" android:layout_height="1dp"
              android:background="@color/all_e"
        />


        <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                               android:paddingLeft="@dimen/sp_12"
                                               android:paddingRight="@dimen/sp_12"
                                               android:layout_height="match_parent">

            <LinearLayout android:layout_width="match_parent"

                          android:orientation="vertical" android:layout_height="match_parent">


                <TextView android:layout_width="match_parent"
                          android:text="预定时间"
                          android:gravity="center"
                          android:textSize="@dimen/sp_16"
                          android:padding="8dp"
                          android:layout_height="wrap_content"/>


                <org.angmarch.views.NiceSpinner
                        android:id="@+id/nice_spinner"
                        android:layout_gravity="center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="16dp"/>


                <TextView android:layout_width="match_parent"
                          android:text="人数"
                          android:padding="8dp"
                          android:gravity="center"
                          android:textSize="@dimen/sp_16"
                          android:layout_height="wrap_content"/>

                <com.yjhh.ppwcustomer.ui.customview.ARSetupView
                        android:layout_width="match_parent"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:layout_height="wrap_content"/>

                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                    <TextView android:layout_width="60dp"
                              android:text="联系人"
                              android:textSize="@dimen/sp_16"
                              android:layout_marginLeft="@dimen/sp_16"
                              android:layout_centerVertical="true"
                              android:id="@+id/tv_Contacts"
                              android:layout_height="wrap_content"/>
                    <EditText android:layout_width="match_parent"
                              android:background="@null"
                              android:id="@+id/et_Contacts"
                              android:layout_toRightOf="@+id/tv_Contacts"
                              android:paddingTop="8dp"
                              android:hint="姓名"
                              android:paddingBottom="8dp"
                              android:layout_height="wrap_content"/>
                    <View android:layout_width="match_parent"
                          android:id="@+id/view1"
                          android:layout_below="@+id/et_Contacts"
                          android:layout_toRightOf="@+id/tv_Contacts"
                          android:background="@color/all_e"
                          android:layout_height="1dp"/>


                </RelativeLayout>


                <RadioGroup
                        android:layout_marginLeft="76dp"
                        android:orientation="horizontal"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp"
                        android:layout_toRightOf="@id/tv_Contacts"
                        android:layout_below="@+id/view1"
                        android:id="@+id/rg_gender"

                        android:layout_width="match_parent" android:layout_height="wrap_content">

                    <RadioButton android:layout_width="wrap_content"
                                 android:text="先生"
                                 android:button="@null"
                                 android:background="@drawable/tag_bg"
                                 android:id="@+id/rb_male"
                                 android:paddingLeft="@dimen/sp_16"
                                 android:checked="true"
                                 android:paddingRight="@dimen/sp_16"
                                 android:paddingTop="8dp"
                                 android:paddingBottom="8dp"
                                 android:layout_marginRight="@dimen/sp_16"
                                 android:layout_height="wrap_content"/>
                    <RadioButton android:layout_width="wrap_content"
                                 android:text="女士"
                                 android:button="@null"
                                 android:paddingLeft="@dimen/sp_16"
                                 android:paddingRight="@dimen/sp_16"
                                 android:paddingTop="8dp"
                                 android:paddingBottom="8dp"
                                 android:background="@drawable/tag_bg"
                                 android:id="@+id/rb_female"
                                 android:layout_height="wrap_content"/>

                </RadioGroup>


                <View android:layout_width="match_parent"

                      android:layout_below="@+id/rg_gender"

                      android:background="@color/all_e"
                      android:layout_height="1dp"/>


                <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

                    <TextView android:layout_width="60dp"
                              android:text="手机号"
                              android:layout_centerVertical="true"
                              android:id="@+id/tv_phone"
                              android:layout_marginLeft="@dimen/sp_16"
                              android:layout_height="wrap_content"/>
                    <EditText android:layout_width="match_parent"
                              android:background="@null"
                              android:id="@+id/et_phone"
                              android:hint="请输入手机号"
                              android:paddingTop="8dp"
                              android:paddingBottom="8dp"
                              android:layout_toRightOf="@+id/tv_phone"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                              android:layout_alignParentRight="true"
                              android:layout_centerVertical="true"
                              android:id="@+id/tv_contact"
                              android:layout_marginRight="@dimen/sp_12"
                              android:text="通讯录"
                    />

                    <View android:layout_width="match_parent"
                          android:layout_below="@+id/et_phone"
                          android:layout_toRightOf="@+id/tv_phone"
                          android:background="@color/all_e"
                          android:layout_height="1dp"/>

                </RelativeLayout>


                <TextView android:layout_width="match_parent"
                          android:text="备注"
                          android:textSize="@dimen/sp_16"
                          android:padding="8dp"
                          android:gravity="center"
                          android:layout_height="wrap_content"/>


                <EditText android:layout_width="match_parent"
                          android:gravity="top|left"
                          android:padding="@dimen/dp_4"
                          android:background="@drawable/stroke_frame_all6"
                          android:layout_height="150dp"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

    </LinearLayout>


    <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
              android:text="确认"
              android:id="@+id/tv_commit"
              android:gravity="center"
              android:padding="@dimen/sp_12"
              android:layout_alignParentBottom="true"
    />

</RelativeLayout>