<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
                android:background="@drawable/backgrounddialog"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">


    <LinearLayout android:layout_width="wrap_content"
                  android:orientation="vertical"

                 android:layout_centerHorizontal="true"
                  android:layout_height="wrap_content">

        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:text="核对金额"
                  android:layout_marginTop="20pt"
                  android:gravity="center"
                  android:textColor="#FF333333"
                  android:textSize="15pt"
        />

        <RelativeLayout android:layout_width="315pt"
                        android:paddingLeft="25pt"
                        android:paddingRight="25pt"
                        android:id="@+id/rl1"
                        android:layout_height="60pt">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="实际金额(元)"
                      android:layout_centerVertical="true"
                      android:textColor="#FF666666"
                      android:textSize="13pt"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="9900.00"
                    android:id="@+id/tv_1"

                    android:layout_alignParentRight="true"
                    android:textColor="#FF333333"
                    android:textSize="20pt"
            />

            <View    android:layout_alignParentBottom="true"

                    android:layout_width="265pt"
                    android:layout_height="0.5pt"
                    android:background="#FFCDCDCD"
            />
        </RelativeLayout>



        <RelativeLayout
                android:paddingLeft="25pt"
                android:id="@+id/rl2"
                android:paddingRight="25pt"
                android:layout_width="315pt" android:layout_height="60pt">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"

                      android:layout_centerVertical="true"
                      android:text="不参与优惠金额(元)"
                      android:textColor="#FF666666"
                      android:textSize="13pt"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="9900.00"
                    android:layout_alignParentRight="true"
                    android:textColor="#FF333333"
                    android:textSize="20pt"
                    android:id="@+id/tv_2"
            />

            <View    android:layout_alignParentBottom="true"

                     android:layout_width="265pt"
                     android:layout_height="0.5pt"
                     android:background="#FFCDCDCD"
            />
        </RelativeLayout>


        <RelativeLayout android:layout_width="315pt"
                        android:paddingLeft="25pt"
                        android:id="@+id/rl3"
                        android:paddingRight="25pt"
                        android:layout_height="60pt">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="优惠金额(元)"
                      android:layout_centerVertical="true"
                      android:textColor="#FF666666"
                      android:textSize="13pt"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="9900.00"
                    android:layout_alignParentRight="true"
                    android:textColor="#FF333333"
                    android:textSize="20pt"
                    android:id="@+id/tv_3"
            />
            <View    android:layout_alignParentBottom="true"

                     android:layout_width="265pt"
                     android:layout_height="0.5pt"
                     android:background="#FFCDCDCD"
            />
        </RelativeLayout>


        <RelativeLayout android:layout_width="315pt"
                        android:paddingLeft="25pt"
                        android:id="@+id/rl4"
                        android:paddingRight="25pt"
                        android:layout_height="60pt">

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="应付金额(元)"
                      android:layout_centerVertical="true"
                      android:textColor="#FF666666"
                      android:textSize="13pt"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:text="9900.00"
                    android:layout_alignParentRight="true"
                    android:textColor="#F9572D"
                    android:textSize="28pt"
                    android:id="@+id/tv_4"
            />
            <View    android:layout_alignParentBottom="true"

                     android:layout_width="265pt"
                     android:layout_height="0.5pt"
                     android:background="#FFCDCDCD"
            />
        </RelativeLayout>




        <com.google.android.material.button.MaterialButton
                android:layout_width="265pt"
                android:layout_margin="25pt"
                android:text="前往付款"
                app:backgroundTint="#F9572D"
                android:id="@+id/mb_pay"
                android:textColor="#FFFFFFFF"
                android:textSize="15pt"
                android:layout_gravity="center"
                android:layout_height="wrap_content"/>

    </LinearLayout>


</RelativeLayout>