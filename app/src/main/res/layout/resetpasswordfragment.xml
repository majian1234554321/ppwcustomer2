<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <com.yjhh.common.view.TitleBarView android:layout_width="match_parent"
                                                 app:textValue="修改密码"
                                                 android:id="@+id/tbv_title"

                                                 android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="277pt"

                  android:layout_centerHorizontal="true"
                  android:layout_below="@+id/tbv_title"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
    >

        <TextView
                android:id="@+id/tv_mobile"
                android:textColor="#FF333333"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12pt"

                android:layout_marginTop="31.5pt"
                android:layout_marginBottom="12pt"
                android:text="找回密码"
        />


        <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">


            <EditText android:layout_width="match_parent"
                      android:layout_height="50dp"

                      android:textSize="12pt"
                      android:id="@+id/et_verifyCode"
                      android:background="@null"
                      android:singleLine="true"
                      android:hint="请输入验证码"
                      android:layout_toLeftOf="@+id/tv_verifyCode"
            />

            <TextView
                    android:id="@+id/tv_verifyCode"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="获取验证码"
                    android:textColor="#FFC6AC81"

                    android:gravity="center"
                    android:textSize="12pt"
                    android:layout_width="wrap_content" android:layout_height="30dp"/>

        </RelativeLayout>


        <View android:layout_width="match_parent"
              android:background="@color/c6"

              android:layout_height="1dp"/>

        <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent"
                android:layout_height="50dp"

                android:textSize="12pt"
                android:singleLine="true"
                android:layout_below="@+id/et_phone"
                android:background="@null"
                android:hint="请输入密码"
                android:layout_toRightOf="@+id/tv_password"
        />
        <View android:layout_width="match_parent"
              android:background="@color/c6"
              android:layout_height="1dp"/>


        <TextView
                android:id="@+id/bt_commit"
                android:gravity="center"

                android:layout_marginTop="63pt"
                android:layout_gravity="center"
                android:background="#C6AC81"
                android:text="完成"

                android:textSize="18pt"
                android:textColor="@color/white"
                android:layout_width="match_parent"
                android:layout_height="39pt"

        />


    </LinearLayout>


</RelativeLayout>