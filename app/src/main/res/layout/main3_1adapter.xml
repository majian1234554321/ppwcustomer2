<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:paddingLeft="15pt"
                android:paddingBottom="8pt"
                android:background="@color/white"
                android:paddingRight="15pt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:id="@+id/tv_time"
              android:paddingTop="10pt"
              android:paddingBottom="8pt"
              tools:text="2017/11/11  13:12:20"
              android:textColor="#FF666666"
              android:textSize="14pt"
    />
    <TextView
            android:paddingTop="10pt"
            android:id="@+id/tv_status"
            android:paddingBottom="8pt"
            android:layout_width="42pt"
            android:layout_height="wrap_content"
            android:text="已付款"
            android:layout_alignParentRight="true"
            android:textColor="#FF333333"
            android:textSize="14pt"
    />


    <ImageView android:layout_width="65pt"
               android:id="@+id/iv_image"
               android:scaleType="fitXY"
               android:layout_marginRight="10pt"
               android:layout_below="@+id/tv_time"
               android:layout_height="65pt"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_name"
              tools:text="1212"
              android:textColor="#FF333333"
              android:singleLine="true"
              android:textSize="13pt"
              android:layout_alignTop="@+id/iv_image"
              android:layout_toRightOf="@+id/iv_image"
              android:layout_height="wrap_content"/>
    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_price1"
              android:text="总价"
              android:layout_below="@+id/tv_name"
              android:gravity="center_vertical"
              android:textColor="#FF999999"
              android:textSize="13pt"
              android:layout_above="@+id/tv_price2"
              android:layout_toRightOf="@+id/iv_image"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_price11"
              tools:text="总价"
              android:layout_alignParentRight="true"

              android:gravity="center"
              android:layout_alignTop="@+id/tv_price1"
              android:layout_alignBottom="@+id/tv_price1"
              android:textColor="#FF999999"
              android:textSize="13pt"

              android:layout_height="wrap_content"/>


    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_price2"
              android:text="实付金额"
              android:textColor="#FF666666"
              android:textSize="13pt"
              android:layout_alignBottom="@+id/iv_image"
              android:layout_toRightOf="@+id/iv_image"
              android:layout_height="wrap_content"/>

    <TextView android:layout_width="wrap_content"
              android:id="@+id/tv_price22"
              android:text="1212"
              android:textColor="#FFFF552E"
              android:textSize="13pt"
              android:layout_alignParentRight="true"
              android:layout_alignBottom="@+id/iv_image"
              android:layout_height="wrap_content"/>

    <com.google.android.material.button.MaterialButton
            android:layout_alignParentRight="true"
            app:cornerRadius="25pt"
            android:textSize="14pt"
            android:id="@+id/mb_pay"
            android:layout_below="@+id/tv_price22"
            android:layout_width="wrap_content"
            android:text="立即支付"
            android:layout_height="40pt"/>


</RelativeLayout>