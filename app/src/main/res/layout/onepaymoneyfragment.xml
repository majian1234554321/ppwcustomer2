<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <TextView android:layout_width="match_parent" android:layout_height="30pt"
              android:text="选择支付方式"
              android:textColor="#FF666666"
              android:textSize="12pt"
              android:gravity="center_vertical"
              android:paddingLeft="15pt"
    />


    <RadioGroup android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15pt"
                android:background="@color/white"
                android:paddingRight="15pt"
                android:layout_height="90.5pt">
        <RadioButton android:layout_width="match_parent"
                     android:textColor="#FF333333"
                     android:textSize="14pt"
                     android:button="@null"
                     android:checked="true"
                     android:drawableRight="@drawable/selector_radio"
                     android:drawablePadding="8pt"
                     android:paddingTop="12.5pt"
                     android:paddingBottom="12.5pt"
                     android:drawableLeft="@drawable/zhifubaozhifu"
                     android:layout_height="wrap_content"
                     android:id="@+id/rb_alipay"
                     android:text="支付宝"
        />

        <View
                android:layout_width="327pt"
                android:layout_gravity="center_horizontal"
                android:layout_height="0.5pt"
                android:background="#FFE6E6E6"
        />

        <RadioButton android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/rb_wxpay"
                     android:drawablePadding="8pt"
                     android:button="@null"
                     android:drawableRight="@drawable/selector_radio"
                     android:paddingTop="12.5pt"
                     android:paddingBottom="12.5pt"
                     android:textColor="#FF333333"
                     android:drawableLeft="@drawable/weixinzhifu"
                     android:textSize="14pt"
                     android:text="微信支付"
        />

    </RadioGroup>


    <TextView android:layout_width="300pt"
              android:layout_gravity="center_horizontal"
              android:text="确认支付"
              android:textColor="#FFFFFFFF"
              android:background="@drawable/button034"
              android:gravity="center"
              android:id="@+id/tv_pay"
              android:textSize="16pt"
              android:layout_marginTop="64pt" android:layout_height="39pt"

    />

</LinearLayout>