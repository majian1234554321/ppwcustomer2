<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="wrap_content">


    <RelativeLayout android:layout_width="280pt"
                    android:id="@+id/iv_image"
                    android:layout_centerHorizontal="true"
                    android:background="@drawable/icon_appupdate"
                    android:layout_height="127pt">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="前往下载>>"
                  android:paddingLeft="17pt"
                  android:id="@+id/tv_download"
                  android:textColor="#FFF3DAAF"
                  android:layout_marginTop="81pt"
                  android:textSize="12pt"

        />


    </RelativeLayout>


    <TextView android:layout_width="280pt"
              android:layout_below="@+id/iv_image"
              android:text="更新内容"
              android:paddingLeft="17pt"
              android:paddingRight="17pt"
              android:paddingTop="7.5pt"
              android:paddingBottom="7.5pt"
              android:background="@color/white"
              android:id="@+id/text"
              android:layout_centerHorizontal="true"
              android:textColor="#FF333333"
              android:textSize="15pt"
              android:layout_height="wrap_content"/>

    <ScrollView android:layout_width="280pt"
                android:layout_below="@+id/text"
                android:id="@+id/sc"
                android:paddingLeft="17pt"
                android:paddingRight="17pt"
                android:paddingBottom="22.5pt"
                android:layout_centerHorizontal="true"
                android:background="@color/white"
                android:layout_height="97pt">

        <TextView android:layout_width="match_parent"
                  android:textSize="13pt"
                  android:id="@+id/tv_content"
                  android:layout_height="wrap_content"
                  android:text="1121212"
        />

    </ScrollView>


    <RelativeLayout
            android:layout_below="@+id/sc"
            android:background="@drawable/stroke_buttom"
            android:layout_width="280pt"
            android:gravity="center"

            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:id="@+id/ll_pt"
                      android:layout_height="wrap_content">

            <View
                    android:id="@+id/line_middle"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/lib_pub_color_line"/>

            <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <TextView
                        android:id="@+id/btn_cancel"
                        android:layout_width="0dp"
                        android:padding="12.5pt"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/lib_pub_color_trans"
                        android:gravity="center"
                        android:text="下次再说"
                        android:textAllCaps="false"
                        android:textColor="#FF454545"
                        android:textSize="17pt"
                        android:textStyle="normal"/>

                <View
                        android:id="@+id/line_bottom"
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="@color/lib_pub_color_line"/>

                <TextView
                        android:id="@+id/btn_ok"
                        android:layout_width="0dp"
                        android:padding="12.5pt"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:background="@color/lib_pub_color_trans"
                        android:gravity="center"
                        android:text="立即更新"
                        android:textColor="@color/colorPrimary"
                        android:textSize="17pt"
                        android:textAllCaps="false"

                        android:textStyle="normal"/>
            </LinearLayout>


        </LinearLayout>

        <com.google.android.material.button.MaterialButton
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="立即更新"
                android:id="@+id/mb"
                android:visibility="gone"
                android:paddingTop="7.5pt"
                android:paddingBottom="7.5pt"
                android:paddingLeft="49.5pt"
                android:paddingRight="49.5pt"
                android:textColor="#FFF3DAAF"
                android:textSize="17pt"
                app:cornerRadius="19pt"
                android:background="@color/white"
                android:gravity="center"
                android:layout_height="wrap_content"/>

    </RelativeLayout>


</RelativeLayout>