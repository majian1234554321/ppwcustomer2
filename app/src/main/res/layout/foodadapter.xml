<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="wrap_content">

    <ImageView android:layout_width="60dp" android:layout_height="60dp"
               android:id="@+id/iv_image"
               android:src="@mipmap/ic_launcher"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:layout_toRightOf="@+id/iv_image"
              android:id="@+id/tv_storeName"
              android:text="周黑鸭"
    />

    <com.paipaiwei.personal.ui.customview.RatingBar
            android:id="@+id/ratingbar"
            android:layout_width="100dp"

            android:layout_height="25dp"
            android:gravity="center"
            android:layout_below="@+id/tv_storeName"
            app:allStarsCount="5"
            app:curSelectValue="1.5"
            android:layout_toRightOf="@+id/iv_image"
            app:starEmpty="@drawable/star_empty"
            app:starFill="@drawable/star_full"
            app:starHalf="@drawable/star_half_full"
            app:starImageSize="15dp"
            app:starPadding="5dp"
            app:stepSize="Half"/>

    <TextView android:layout_width="wrap_content" android:layout_height="25dp"
              android:layout_toRightOf="@+id/ratingbar"
              android:layout_below="@+id/tv_storeName"
              android:gravity="center"
              android:layout_marginLeft="@dimen/sp_12"
              android:id="@+id/tv_sv"
              android:text="周黑鸭"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="25dp"
              android:layout_toRightOf="@+id/iv_image"
              android:layout_below="@+id/ratingbar"
              android:gravity="center"
              android:id="@+id/tv_remark1"
              android:text="￥0起送丨配送费5丨￥54/人"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="25dp"
              android:layout_toRightOf="@+id/iv_image"
              android:layout_below="@+id/tv_remark1"
              android:gravity="center"
              android:id="@+id/tv_remark2"
              android:text="满50减10 （不与美食活动同享）"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="25dp"
              android:layout_toRightOf="@+id/iv_image"
              android:layout_below="@+id/tv_remark2"
              android:gravity="center"
              android:id="@+id/tv_remark3"
              android:text="满50减10 （不与美食活动同享）"
    />


</RelativeLayout>