<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <com.yjhh.common.view.TitleBarView android:layout_width="match_parent"
                                       app:textValue="在线支付"
                                       android:id="@+id/tbv_title"
                                       android:layout_height="wrap_content"/>

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:background="@color/white"
                  android:layout_height="185pt">

        <ImageView android:layout_width="111.5pt"
                   android:layout_marginTop="30pt"
                   android:background="@drawable/daifukuan2x"
                   android:layout_gravity="center"
                   android:layout_height="79pt"/>

        <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="25pt"
                android:text="支付剩余时间"
                android:textColor="#FF666666"
                android:textSize="13pt"
        />
        <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:text="14:58"
                android:id="@+id/tv_countdown"
                android:textColor="#FF333333"
                android:textSize="24pt"
        />


    </LinearLayout>

    <RelativeLayout android:layout_width="match_parent"
                    android:paddingLeft="15pt"
                    android:background="@color/white"
                    android:paddingRight="15pt"
                    android:layout_height="45pt">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="一元拍"
                android:layout_centerVertical="true"
                android:textColor="#FF151515"
                android:textSize="14pt"
        />


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥5.00"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#F9572D "
                android:textSize="14pt"
        />

    </RelativeLayout>

    <TextView android:layout_width="match_parent" android:layout_height="30pt"
              android:text="选择支付方式"
              android:textColor="#FF666666"
              android:textSize="12pt"
              android:gravity="center_vertical"
              android:paddingLeft="15pt"
    />

    <RadioGroup android:layout_width="match_parent"
                android:orientation="vertical"
                android:paddingLeft="15pt"
                android:background="@color/white"
                android:paddingRight="15pt"
                android:layout_height="90.5pt">


        <RadioButton android:layout_width="match_parent"
                     android:layout_height="wrap_content"
                     android:id="@+id/rb_wxpay"
                     android:drawablePadding="8pt"
                     android:button="@null"
                     android:drawableRight="@drawable/selector_radio"
                     android:paddingTop="12.5pt"
                     android:checked="true"
                     android:paddingBottom="12.5pt"
                     android:textColor="#FF333333"
                     android:drawableLeft="@drawable/weixinzhifu"
                     android:textSize="14pt"
                     android:text="微信支付"
        />

        <View
                android:layout_width="327pt"
                android:layout_gravity="center_horizontal"
                android:layout_height="0.5pt"
                android:background="#FFE6E6E6"
        />

        <RadioButton android:layout_width="match_parent"
                     android:textColor="#FF333333"
                     android:textSize="14pt"
                     android:button="@null"

                     android:drawableRight="@drawable/selector_radio"
                     android:drawablePadding="8pt"
                     android:paddingTop="12.5pt"
                     android:paddingBottom="12.5pt"
                     android:drawableLeft="@drawable/zhifubaozhifu"
                     android:layout_height="wrap_content"
                     android:id="@+id/rb_alipay"
                     android:text="支付宝"
        />


    </RadioGroup>

    <TextView android:layout_width="300pt"
              android:layout_gravity="center_horizontal"
              android:text="确认支付"
              android:textColor="#FFFFFFFF"
              android:background="@drawable/button034"
              android:gravity="center"
              android:id="@+id/tv_pay"
              android:textSize="16pt"
              android:layout_marginTop="64pt" android:layout_height="39pt"

    />

</LinearLayout>