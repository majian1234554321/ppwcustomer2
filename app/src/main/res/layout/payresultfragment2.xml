<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/toolbar"
            app:contentInsetStart="0dp"
            app:contentInsetEnd="0dp"
            android:padding="0dp"
            app:contentInsetStartWithNavigation="0dp"
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">


        <RelativeLayout android:layout_width="match_parent"
                        android:layout_height="?attr/actionBarSize">


            <ImageView
                    android:id="@+id/iv_back"
                    android:layout_marginLeft="15pt"
                    android:visibility="gone"
                    android:src="@drawable/icon_arrow_left_black"
                    android:layout_width="22pt"
                    android:layout_centerVertical="true"
                    android:layout_height="22pt"/>

            <TextView
                    android:id="@+id/tv_title"
                    android:layout_gravity="center"
                    android:textSize="17pt"
                    android:text="支付成功"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:id="@+id/iv_right"
                    android:text="完成"
                    android:visibility="gone"
                    android:textColor="#FF2C85FF"
                    android:textSize="15pt"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15pt"
                    android:layout_width="wrap_content" android:layout_height="wrap_content"/>

            <View android:layout_width="match_parent"
                  android:layout_alignParentBottom="true"
                  android:background="@color/e6"
                  android:layout_height="0.5pt"/>

        </RelativeLayout>


    </androidx.appcompat.widget.Toolbar>


    <LinearLayout android:layout_width="match_parent"
                  android:background="@color/white"
                  android:paddingBottom="16pt"
                  android:gravity="center_horizontal"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <ImageView android:layout_width="115pt" android:layout_height="79pt"
                   android:layout_marginTop="30.5pt"
                   android:layout_marginBottom="20.5pt"
                   android:src="@drawable/icon_success"

        />

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:id="@+id/tv_tips"
                  tools:text="支付成功"
                  android:textColor="#FF333333"
                  android:textSize="17pt"
        />
        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_marginTop="5.5pt"
                  android:textColor="#FF552E"
                  android:visibility="gone"
                  android:id="@+id/tv_price"
                  android:textSize="17pt"
                  android:text="99.99"
        />
    </LinearLayout>


    <com.google.android.material.button.MaterialButton android:layout_width="150pt"
                                                       android:layout_marginTop="79pt"
                                                       android:text="返回"
                                                       android:id="@+id/mb_back"
                                                       app:cornerRadius="5pt"
                                                       app:backgroundTint="#F9572D"
                                                       android:textColor="#FFFFFFFF"
                                                       android:textSize="16pt"
                                                       android:layout_gravity="center"
                                                       android:layout_height="wrap_content"/>


</LinearLayout>