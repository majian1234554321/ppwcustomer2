<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent">


    <com.yjhh.common.view.TitleBarView
            android:id="@+id/tbv_title"
            app:textValue="注册"
            app:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="24dp"
                  android:layout_below="@+id/tbv_title"
                  android:layout_height="wrap_content">


        <TextView
                android:id="@+id/tv_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="24dp"
                android:text="新用户注册"
        />


        <RelativeLayout android:layout_width="match_parent"

                        android:layout_height="wrap_content">


            <EditText android:layout_width="match_parent" android:layout_height="50dp"
                      android:id="@+id/et_phone"
                      android:background="@null"
                      android:hint="你的手机号"
                      android:layout_toRightOf="@+id/tv_phone"
            />

            <TextView
                    android:id="@+id/tv_verifyCode"
                    android:layout_alignParentRight="true"
                    android:text="获取验证码"
                    android:gravity="center"
                    android:background="@drawable/border_write"
                    android:layout_centerVertical="true"
                    android:textSize="10sp"
                    android:layout_width="60dp" android:layout_height="30dp"/>
        </RelativeLayout>


        <View android:layout_width="match_parent"
              android:background="@color/all_6"

              android:layout_height="1dp"/>


        <EditText android:layout_width="match_parent" android:layout_height="50dp"
                  android:layout_below="@+id/et_password"
                  android:id="@+id/et_verifyCode"
                  android:background="@null"
                  android:hint="请输入验证码"
                  android:layout_toLeftOf="@+id/tv_verifyCode"
                  android:layout_toRightOf="@+id/tv_verifyCode1"
        />


        <View android:layout_width="match_parent"
              android:background="@color/all_6"

              android:layout_height="1dp"/>

        <EditText
                android:id="@+id/et_password"
                android:layout_width="match_parent" android:layout_height="50dp"
                android:layout_below="@+id/et_phone"
                android:background="@null"
                android:hint="请输入密码"
                android:layout_toRightOf="@+id/tv_password"
        />

        <View android:layout_width="match_parent"
              android:background="@color/all_6"

              android:layout_height="1dp"/>

        <CheckBox android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:id="@+id/checkbox"
                  android:checked="true"
                  android:layout_marginTop="@dimen/sp_16"
                  android:layout_marginBottom="@dimen/sp_16"
                  android:text="我已阅读并同意 服务条款 和 隐私政策"
        />

        <Button android:id="@+id/bt_register"
                android:layout_below="@+id/et_verifyCode"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="注册"
        />


    </LinearLayout>


</RelativeLayout>