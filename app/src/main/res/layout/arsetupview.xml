<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="wrap_content"
                android:layout_height="30pt">
    <TextView android:layout_width="30pt"
              android:id="@+id/tv_reduce"

              android:background="@drawable/jian022"
              android:gravity="center"
              android:layout_height="30pt"/>

    <TextView
            android:text="1"
            android:layout_toRightOf="@+id/tv_reduce"
            android:id="@+id/tv_count"
            android:padding="4dp"
            android:gravity="center"

            android:textColor="#FF333333"
            android:textSize="18pt"
            android:layout_centerVertical="true"

            android:layout_width="72pt" android:layout_height="wrap_content"/>


    <TextView android:layout_width="30pt"
              android:id="@+id/tv_add"

              android:background="@drawable/jia022"
              android:gravity="center"
              android:layout_centerVertical="true"
              android:layout_toRightOf="@+id/tv_count"
              android:layout_height="30pt"/>

</RelativeLayout>