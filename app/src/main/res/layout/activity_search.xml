<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:zhy="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        tools:context=".ui.activity.SearchActivity">


    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl0"
                    android:layout_height="48dp">

        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:src="@drawable/icon_back"
                   android:padding="8dp"
                   android:layout_centerVertical="true"
                   android:id="@+id/iv_back"
        />

        <EditText android:layout_width="match_parent"
                  android:id="@+id/et_search"
                  android:layout_centerVertical="true"
                  android:layout_marginRight="@dimen/sp_12"
                  android:padding="@dimen/dp_4"
                  tools:text="121212"
                  android:layout_toRightOf="@+id/iv_back"
                  android:background="@drawable/stroke_search"
                  android:layout_height="wrap_content"/>

    </RelativeLayout>


    <View android:layout_width="match_parent" android:layout_height="1dp"
          android:layout_marginTop="4dp"
          android:background="@color/all_e"
    />


    <FrameLayout android:layout_width="match_parent"
                 android:layout_below="@+id/rl0"
                 android:layout_height="match_parent">


        <LinearLayout
                android:id="@+id/ll0"
                android:orientation="vertical"
                android:layout_width="match_parent" android:layout_height="wrap_content">
            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:id="@+id/tv_history"
                      android:paddingTop="@dimen/sp_12"
                      android:paddingLeft="@dimen/sp_12"
                      android:text="历史搜索"
            />

            <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/history_flowlayout"
                    zhy:max_select="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/sp_12"
                   >
            </com.zhy.view.flowlayout.TagFlowLayout>

            <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:text="热门搜索"
                      android:paddingLeft="@dimen/sp_12"
            />

            <com.zhy.view.flowlayout.TagFlowLayout
                    android:id="@+id/hot_flowlayout"
                    zhy:max_select="1"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/sp_12">
            </com.zhy.view.flowlayout.TagFlowLayout>


        </LinearLayout>


        <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                android:visibility="gone"
                                                android:id="@+id/recyclerView"
                                                android:layout_height="match_parent">

        </android.support.v7.widget.RecyclerView>


    </FrameLayout>


</LinearLayout>