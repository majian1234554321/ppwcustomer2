<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent">

    <com.yjhh.common.view.TitleBarView
            android:id="@+id/tbv_title"
            app:textValue="换绑手机"
            app:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:padding="24dp"
                  android:layout_below="@+id/tbv_title"
                  android:layout_height="wrap_content">


        <EditText android:layout_width="match_parent" android:layout_height="50dp"

                  android:id="@+id/et_beforePhone"
                  android:background="@null"
                  android:hint="请输入原手机号"

        />


        <View android:layout_width="match_parent"
              android:background="@color/all_6"

              android:layout_height="1dp"/>


        <EditText
                android:id="@+id/et_newPhone"
                android:layout_width="match_parent" android:layout_height="50dp"
                android:layout_below="@+id/et_beforePhone"
                android:background="@null"
                android:hint="请输入新手机号码"

        />

        <View android:layout_width="match_parent"
              android:background="@color/all_6"

              android:layout_height="1dp"/>


        <RelativeLayout android:layout_width="match_parent"

                        android:layout_height="wrap_content">


            <EditText android:layout_width="match_parent" android:layout_height="50dp"
                      android:id="@+id/et_verifyCode"
                      android:background="@null"

                      android:hint="请输入验证码"
                      android:layout_toRightOf="@+id/tv_phone"
            />

            <TextView
                    android:id="@+id/tv_verifyCode"
                    android:layout_alignParentRight="true"
                    android:text="获取验证码"
                    android:gravity="center"
                    android:background="@drawable/border_write"
                    android:layout_centerVertical="true"
                    android:textSize="10sp"
                    android:layout_width="60dp" android:layout_height="30dp"/>
        </RelativeLayout>
        <View android:layout_width="match_parent"
              android:background="@color/all_6"

              android:layout_height="1dp"/>


        <Button android:id="@+id/bt_register"
                android:layout_below="@+id/et_verifyCode"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimary"
                android:textColor="@color/white"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                android:text="完成"
        />


    </LinearLayout>

</RelativeLayout>