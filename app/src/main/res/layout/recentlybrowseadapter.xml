<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView android:layout_width="84pt" android:layout_height="72.5pt"
               android:id="@+id/iv_image"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_toRightOf="@+id/iv_image"
              android:id="@+id/tv_storeName"
              android:layout_height="wrap_content"
              tools:text="济州烤肉（汉街店）"
    />


    <com.paipaiwei.takeout_personal.ui.customview.RatingBar
            android:id="@+id/id_ratingbar"
            android:layout_width="100dp"
            android:layout_height="25dp"
            android:gravity="center"
            app:allStarsCount="5"
            android:layout_below="@+id/tv_storeName"
            android:layout_above="@+id/tv_info"
            app:curSelectValue="1.5"
            android:layout_toRightOf="@+id/iv_image"
            app:starEmpty="@drawable/star_empty"
            app:starFill="@drawable/star_full"
            app:starHalf="@drawable/star_half_full"
            app:starImageSize="15dp"
            app:starPadding="5dp"
            app:clickable="false"
            app:stepSize="Half"/>
    <TextView android:layout_width="wrap_content"
              android:layout_toRightOf="@+id/id_ratingbar"
              android:layout_below="@+id/tv_storeName"
              android:gravity="center"
              android:id="@+id/tv_avgPrice"
              android:layout_marginLeft="12dp"
              android:layout_above="@+id/tv_info"
              android:layout_height="wrap_content"
              tools:text="人均54元"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_toRightOf="@+id/iv_image"
              android:layout_alignBottom="@+id/iv_image"
              android:layout_height="wrap_content"
              android:id="@+id/tv_info"
              tools:text="武昌区  韩式烤肉"
    />
    <TextView android:layout_width="wrap_content"
              android:layout_alignBottom="@+id/iv_image"
              android:gravity="right"
              android:id="@+id/tv_KM"
              android:layout_height="wrap_content"
              android:layout_alignParentRight="true"
              android:layout_toRightOf="@+id/tv_info"
              tools:text="1.2KM"
    />

</RelativeLayout>