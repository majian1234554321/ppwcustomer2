<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="horizontal">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="9.5dp"
            android:paddingLeft="12.5dp"
            android:paddingRight="18.5dp"
            android:paddingTop="12.5dp">

        <ImageView
                android:id="@+id/avatar"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_default_color"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">

            <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">
                <TextView
                        android:id="@+id/tv_username"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="姓名"
                        android:textColor="#6b8747"
                        android:textSize="13sp"/>

                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:id="@+id/tv_time"
                          android:layout_alignParentRight="true"
                />

            </RelativeLayout>






            <com.yjhh.ppwbusiness.views.cui.RatingBar
                    android:id="@+id/id_ratingbar"
                    android:layout_width="100dp"
                    android:layout_height="25dp"
                    android:gravity="center"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="9dp"
                    app:allStarsCount="5"
                    android:layout_below="@+id/tv_storeName"
                    android:layout_above="@+id/tv_info"
                    app:curSelectValue="1.5"
                    android:layout_toRightOf="@+id/iv_image"
                    app:starEmpty="@drawable/star_empty"
                    app:starFill="@drawable/star_full"
                    app:starHalf="@drawable/star_half_full"
                    app:starImageSize="15dp"
                    app:starPadding="5dp"
                    app:clickable="false"
                    app:stepSize="Half"/>



            <TextView
                    android:id="@+id/tv_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="false"
                    android:text="内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容内容"
                    android:textColor="#505050"
                    android:textSize="12sp"/>

            <com.yjhh.ppwbusiness.views.evaluate.ninegrid.NineGridView
                    android:id="@+id/nineGrid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingRight="5dp"
                    android:paddingTop="6dp"/>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content">

                <TextView
                        android:id="@+id/tv_createTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:text="2015-12-31 12:30"
                        android:textColor="#8e8e8e"
                        android:textSize="10sp"/>

                <TextView
                        android:id="@+id/delete"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="9dp"
                        android:layout_toRightOf="@+id/tv_createTime"
                        android:text="删除"
                        android:textColor="#883A5FCD"
                        android:textSize="12sp"/>

                <ImageView
                        android:id="@+id/more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@drawable/feed_more"/>
            </RelativeLayout>

            <!--<com.lzy.widget.ExpandListView
                    android:id="@+id/lv_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:layout_marginTop="9.5dp"
                    android:background="@drawable/event_di"
                    android:divider="@null"
                    android:dividerHeight="0dp"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:paddingTop="16dp"/>-->
        </LinearLayout>
    </LinearLayout>
</LinearLayout>