<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.takeout.PaySuccessActivity">

    <com.yjhh.common.view.TitleBarView
            android:layout_width="match_parent"
            android:id="@+id/tbv_title"
            app:textValue="堂食买单"

            android:layout_height="wrap_content"/>


    <LinearLayout
            android:orientation="vertical"
            android:layout_margin="@dimen/sp_12"
            android:layout_below="@+id/tbv_title"
            android:layout_width="match_parent" android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:padding="8dp"
                      android:background="@drawable/stroke_frame"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                      android:text="消费总额"/>

            <EditText android:layout_width="match_parent"
                      android:background="@null"
                      android:gravity="right"
                      android:id="@+id/tv_totalprice"
                      android:layout_height="wrap_content"
                      android:hint="询问服务员后输入"
            />
        </LinearLayout>


        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:layout_gravity="right"
                  android:layout_marginTop="@dimen/sp_12"
                  android:layout_marginBottom="@dimen/sp_12"
                  android:text="平台会员8折专享价 ¥ 0.00"/>

        <CheckBox android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="输入不参与优惠的金额（如酒水套餐）"
                  android:layout_marginBottom="@dimen/sp_12"
        />


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:padding="8dp"
                      android:background="@drawable/stroke_frame"
                      android:layout_height="wrap_content">


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:textSize="@dimen/sp_16"
                      android:text="不参与优惠的金额"/>

            <EditText android:layout_width="match_parent"
                      android:background="@null"
                      android:gravity="right"
                      android:id="@+id/tv_nodiscount"
                      android:textSize="@dimen/sp_16"
                      android:layout_height="wrap_content"
                      android:hint="询问服务员后输入"
            />
        </LinearLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:padding="8dp"
                      android:layout_marginTop="@dimen/sp_12"
                      android:layout_marginBottom="@dimen/sp_12"
                      android:background="@drawable/solid_frame_alle"
                      android:layout_height="wrap_content">


            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"

                      android:text="实付金额"/>

            <EditText android:layout_width="match_parent"
                      android:background="@null"
                      android:gravity="right"
                      android:id="@+id/tv_payprice"
                      android:layout_height="wrap_content"
                      android:hint="¥ 0.00"
            />
        </LinearLayout>

        <TextView android:layout_width="match_parent" android:layout_height="@dimen/dp_40"
                  android:gravity="center"
                  android:id="@+id/tv_commit"
                  android:text="确认买单"/>
        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"

                  android:text="买单仅限于到店支付，请确认金额后提交"/>


    </LinearLayout>


</RelativeLayout>