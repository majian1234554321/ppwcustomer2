<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tl="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl"
                    android:layout_height="wrap_content">
        <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                   android:layout_centerVertical="true"
                   android:id="@+id/iv_back"
                   android:layout_marginLeft="@dimen/sp_12"
                   android:src="@drawable/icon_back"
        />
        <RadioGroup android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/rg"
                    android:gravity="center"
                    android:layout_height="48dp">


            <RadioButton android:layout_width="80dp"
                         android:id="@+id/rb1"
                         android:button="@null"
                         android:gravity="center"
                         android:text="足迹" android:layout_height="@dimen/dp_40"/>

            <RadioButton android:layout_width="80dp"
                         android:button="@null"
                         android:gravity="center"
                         android:id="@+id/rb2"
                         android:text="收藏" android:layout_height="@dimen/dp_40"/>

        </RadioGroup>

    </RelativeLayout>


    <com.flyco.tablayout.SlidingTabLayout
            android:layout_below="@+id/rl"

            android:id="@+id/mTabLayout"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            tl:tl_tab_space_equal="true"
            android:background="#F6CE59"
            tl:tl_indicator_width="10dp"/>
    <android.support.v4.view.ViewPager android:layout_width="match_parent"
                                       android:id="@+id/mViewPager"
                                       android:layout_below="@+id/mTabLayout"
                                       android:layout_height="wrap_content"/>

</RelativeLayout>