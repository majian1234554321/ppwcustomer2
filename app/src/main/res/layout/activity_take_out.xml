<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.takeout.TakeOutActivity">


    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">


        <com.yjhh.ppwcustomer.ui.customview.GridViewPager android:layout_width="match_parent"
                                                          android:id="@+id/gridViewPager"
                                                          android:layout_height="wrap_content"/>
        <com.youth.banner.view.BannerViewPager android:layout_width="match_parent"
                                               android:id="@+id/banner"
                                               android:layout_height="150dp"/>

        


    </LinearLayout>


    <RelativeLayout android:layout_width="match_parent" android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView android:layout_width="match_parent"
                                                android:id="@+id/recyclerView"
                                                android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>


    </RelativeLayout>

</android.support.constraint.ConstraintLayout>