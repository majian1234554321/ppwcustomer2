<?xml version="1.0" encoding="utf-8"?>


<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.SignActivity">


    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl1"
                    android:layout_height="wrap_content">

        <RelativeLayout android:layout_width="match_parent"
                        android:background="@drawable/gradient_l"
                        android:layout_height="246pt">

            <ImageView android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:paddingLeft="15pt"
                       android:id="@+id/iv_back"
                       android:paddingTop="34.5pt"
                       android:paddingBottom="15pt"
                       android:paddingRight="15pt"
                       android:src="@drawable/icon_arrow_left_white"
            />

            <ImageView android:layout_width="107pt" android:layout_height="27pt"
                       android:layout_centerHorizontal="true"
                       android:layout_marginTop="50pt"
                       android:src="@drawable/zitisheji"
            />

            <RelativeLayout android:layout_width="166pt"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="82pt"
                            android:background="@drawable/qiandaobeijing"
                            android:layout_height="95pt">

                <TextView android:layout_width="wrap_content"
                          android:textColor="#F9572D"
                          tools:text="99天"
                          android:id="@+id/sign_count"
                          android:gravity="top"
                          android:layout_centerInParent="true"
                          android:textSize="24pt"
                          android:layout_height="35pt"
                />

            </RelativeLayout>


        </RelativeLayout>

        <RelativeLayout android:layout_width="match_parent"
                        android:layout_marginTop="166.5pt"
                        android:id="@+id/rl12"
                        android:background="@drawable/di00"
                        android:layout_height="242pt">
            <LinearLayout
                    android:layout_marginTop="25.5pt" android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content" android:layout_height="wrap_content">

                <View android:layout_width="16pt" android:layout_height="1pt"
                      android:background="@color/colorPrimary"
                      android:layout_gravity="center"
                />
                <com.paipaiwei.personal.ui.customview.SignView
                        android:layout_width="wrap_content"
                        android:id="@+id/sv_1"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                <View android:layout_width="16pt" android:layout_height="1pt"
                      android:background="@color/colorPrimary"
                      android:layout_gravity="center"
                />
                <com.paipaiwei.personal.ui.customview.SignView
                        android:layout_width="wrap_content"
                        android:id="@+id/sv_2"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                <View android:layout_width="16pt" android:layout_height="1pt"
                      android:background="@color/colorPrimary"
                      android:layout_gravity="center"
                />
                <com.paipaiwei.personal.ui.customview.SignView
                        android:layout_width="wrap_content"
                        android:id="@+id/sv_3"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                <View android:layout_width="16pt" android:layout_height="1pt"
                      android:background="@color/colorPrimary"
                      android:layout_gravity="center"
                />
                <com.paipaiwei.personal.ui.customview.SignView
                        android:layout_width="wrap_content"
                        android:id="@+id/sv_4"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                <View android:layout_width="16pt" android:layout_height="1pt"
                      android:background="@color/colorPrimary"
                      android:layout_gravity="center"
                />
                <com.paipaiwei.personal.ui.customview.SignView
                        android:layout_width="wrap_content"
                        android:id="@+id/sv_5"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                <View android:layout_width="16pt" android:layout_height="1pt"
                      android:background="@color/colorPrimary"
                      android:layout_gravity="center"
                />
                <com.paipaiwei.personal.ui.customview.SignView
                        android:layout_width="wrap_content"
                        android:id="@+id/sv_6"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>

                <View android:layout_width="16pt" android:layout_height="1pt"
                      android:background="@color/colorPrimary"
                      android:layout_gravity="center"
                />

                <com.paipaiwei.personal.ui.customview.SignView
                        android:layout_width="wrap_content"
                        android:id="@+id/sv_7"
                        android:layout_centerHorizontal="true"
                        android:layout_height="wrap_content"/>
                <View android:layout_width="16pt" android:layout_height="1pt"
                      android:background="@color/colorPrimary"
                      android:layout_gravity="center"
                />

            </LinearLayout>

            <TextView
                    android:id="@+id/tv_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:text="已连续签到1天"
                    android:layout_marginTop="188pt"
                    android:textColor="#FF333333"
                    android:textSize="11pt"
            />


            <TextView
                    android:layout_width="230pt"
                    tools:text="已签到"
                    android:id="@+id/mb_sign"
                    android:gravity="center"

                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="125pt"
                    android:textColor="#FFFFFFFF"
                    android:textSize="18pt"
                    android:layout_height="wrap_content"/>


        </RelativeLayout>


        <RelativeLayout android:layout_width="match_parent"
                        android:paddingLeft="15pt"
                        android:paddingRight="15pt"
                        android:layout_below="@id/rl12"
                        android:layout_height="wrap_content">

            <RelativeLayout android:layout_width="match_parent"
                            android:id="@+id/rl_1234"
                            android:layout_height="24pt">

                <View

                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/tv_1212"
                        android:layout_width="127pt"
                        android:layout_height="0.5pt"
                        android:background="#FFFE6937"
                />


                <View
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/tv_1212"
                        android:layout_width="127pt"

                        android:layout_height="0.5pt"
                        android:background="#FFFE6937"
                />

                <TextView android:layout_width="wrap_content"
                          android:layout_marginLeft="12.5pt"
                          android:layout_marginRight="12.5pt"
                          android:gravity="center"
                          android:id="@+id/tv_1212"
                          android:layout_centerHorizontal="true"
                          android:text="签到规则"
                          android:textColor="#FF666666"
                          android:textSize="17pt"
                          android:layout_height="wrap_content"/>
            </RelativeLayout>


            <TextView android:layout_width="match_parent"
                      android:id="@+id/text"
                      android:layout_marginTop="15pt"
                      android:layout_below="@+id/rl_1234"
                      android:layout_height="wrap_content"
            />
        </RelativeLayout>


    </RelativeLayout>


</ScrollView>
