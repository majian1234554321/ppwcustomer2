<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="15pt" android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView android:layout_width="87pt" android:layout_height="75.5pt"
               android:id="@+id/iv_image"
             android:scaleType="fitXY"
               android:layout_marginRight="10pt"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_toRightOf="@+id/iv_image"
              android:id="@+id/tv_storeName"
              android:textColor="#FF333333"
                android:singleLine="true"
              android:maxEms="15"
              android:textSize="15pt"
              android:layout_height="wrap_content"
              tools:text="济州烤肉（汉街店）"
    />


    <TextView android:layout_width="match_parent"

              android:text="12"
              android:id="@+id/tv_info"
              android:layout_toRightOf="@+id/iv_image"
              android:layout_below="@+id/tv_storeName"
              android:textColor="#FF666666"
              android:textSize="12pt"
              android:ellipsize="end"
              android:maxLines="2"
              android:layout_centerVertical="true"

              android:layout_height="wrap_content"/>


    <TextView android:layout_width="wrap_content"

              android:layout_toRightOf="@+id/iv_image"
              android:layout_alignBottom="@+id/iv_image"
              android:layout_height="wrap_content"
              android:id="@+id/tv_price"
              android:textColor="#FF333333"
              android:textSize="14pt"
              tools:text="武昌区  韩式烤肉"
    />



    <ImageView android:layout_width="17pt"
               android:layout_alignBottom="@+id/iv_image"
               android:background="@drawable/zan022x"
               android:layout_marginRight="4pt"
               android:id="@+id/iv_zan"
               android:layout_toLeftOf="@+id/tv_like"
               android:layout_height="17pt"/>

    <TextView android:layout_width="wrap_content"

              android:textSize="12pt"
              android:gravity="center"
              android:layout_alignBottom="@+id/iv_image"
              android:layout_height="17pt"
              android:id="@+id/tv_like"
              android:layout_alignParentRight="true"
              tools:text="999"
    />





</RelativeLayout>