<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                       xmlns:app="http://schemas.android.com/apk/res-auto"
                                       xmlns:tools="http://schemas.android.com/tools"
                                       android:layout_width="match_parent"
                                       android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">
        <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?actionBarSize"
                android:background="@color/white">

            <RelativeLayout android:layout_width="match_parent"
                            android:paddingStart="15pt"
                            android:paddingEnd="15pt"
                            android:layout_height="48pt">
                <ImageView android:layout_width="22pt"
                           android:layout_centerVertical="true"
                           android:id="@+id/iv_message"
                           android:src="@drawable/icon_xiaoxi4"
                           android:layout_height="22pt"/>

                <ImageView android:layout_width="19.5pt"
                           android:src="@drawable/icon_shezhi00"
                           android:layout_centerVertical="true"
                           android:id="@+id/iv_setting"
                           android:layout_alignParentRight="true"
                           android:layout_height="19.5pt"/>
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <RelativeLayout android:layout_width="match_parent"

                        android:layout_height="wrap_content">


            <RelativeLayout android:layout_width="match_parent"
                            android:id="@+id/rl0"

                            android:paddingStart="28pt"
                            android:paddingRight="24pt"
                            android:layout_height="wrap_content">
                <ImageView
                        android:id="@+id/profile_image"
                        android:background="@drawable/icon_login_touxiang"
                        android:layout_width="74pt"
                        android:layout_height="74pt"
                />

                <LinearLayout android:layout_width="match_parent"
                              android:layout_toLeftOf="@+id/iv_arrow"
                              android:orientation="vertical"
                              android:paddingLeft="19.5pt"

                              android:layout_centerVertical="true"
                              android:layout_toRightOf="@+id/profile_image"
                              android:layout_height="wrap_content">

                    <TextView android:layout_width="match_parent"
                              android:id="@+id/tv_name"
                              android:layout_toLeftOf="@+id/iv_arrow"
                              android:layout_toRightOf="@+id/profile_image"
                              android:text="请点击登录"
                              android:textColor="#FF666666"
                              android:textSize="17pt"
                              android:gravity="center_vertical"
                              android:layout_height="wrap_content"/>

                    <TextView android:layout_width="match_parent"
                              tools:text="188****8888"
                              android:paddingTop="4pt"
                              android:id="@+id/tv_mobile"
                              android:textColor="#333333"
                              android:textSize="14pt"
                              android:layout_height="wrap_content"/>

                </LinearLayout>


                <ImageView android:layout_width="30dp"
                           android:src="@drawable/arrow_right_48"
                           android:layout_centerVertical="true"
                           android:id="@+id/iv_arrow"
                           android:layout_alignParentRight="true"
                           android:layout_height="30dp"/>

            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="9.5pt"
                      android:visibility="gone"
                      android:id="@+id/ll_3"
                      android:background="@drawable/xuanfubeijing"
                      android:gravity="center"
                      android:layout_height="122.5pt">


            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:id="@+id/ll_Integral"
                          android:layout_weight="1"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:drawableLeft="@drawable/icon_jinbi4"
                          android:drawablePadding="5pt"
                          android:gravity="center"
                          android:textColor="#FF666666"
                          android:textSize="12pt"

                          android:text="金币"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="33.5pt"
                          tools:text="99"
                          android:layout_marginTop="7pt"
                          android:id="@+id/tv_Integral"

                          android:gravity="center"
                          android:textColor="#FF333333"
                          android:textSize="24pt"
                />

            </LinearLayout>
            <View
                    android:layout_width="0.5pt"
                    android:layout_height="44pt"
                    android:background="#FFE6E6E6"
            />

            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:id="@+id/ll_card"
                          android:layout_weight="1"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:drawableLeft="@drawable/icon_kaquan"
                          android:drawablePadding="5pt"
                          android:gravity="center"
                          android:textColor="#FF666666"
                          android:textSize="12pt"

                          android:text="卡券"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          tools:text="99"
                          android:layout_marginTop="7pt"
                          android:id="@+id/tv_counp"
                          android:gravity="center"
                          android:textColor="#FF333333"
                          android:textSize="24pt"
                />

            </LinearLayout>
            <View
                    android:layout_width="0.5pt"
                    android:layout_height="44pt"
                    android:background="#FFE6E6E6"
            />
            <LinearLayout android:layout_width="wrap_content"
                          android:orientation="vertical"
                          android:gravity="center"
                          android:id="@+id/ll_sign"
                          android:layout_weight="1"
                          android:layout_height="wrap_content">
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:drawableLeft="@drawable/icon_qiandao"
                          android:drawablePadding="5pt"
                          android:gravity="center"
                          android:textColor="#FF666666"
                          android:textSize="12pt"

                          android:text="签到"
                />
                <TextView android:layout_width="wrap_content" android:layout_height="33.5pt"
                          tools:text="99"
                          android:layout_marginTop="7pt"
                          android:id="@+id/tv_sign"
                          android:textColor="#FF333333"
                          android:textSize="24pt"
                />

            </LinearLayout>

        </LinearLayout>


        <com.yjhh.common.view.ItemEntryView
                android:id="@+id/iev_evaluate"
                app:ievtextValue="我的评价"
                app:ievunderline="true"
                android:paddingLeft="4pt"
                android:paddingRight="4pt"
                app:ievdrwableleft="@drawable/icon_pingjia"
                app:ievtextpadding="@dimen/sp_12"
                app:ievbackground="@color/white"
                app:ievtextColor="@color/all_3"
                android:layout_width="match_parent" android:layout_height="wrap_content"

        />


        <com.yjhh.common.view.ItemEntryView
                android:paddingLeft="4pt"
                android:paddingRight="4pt"
                android:id="@+id/iev_prop"
                app:ievtextValue="我的道具"
                app:ievunderline="true"
                app:ievtextpadding="@dimen/sp_12"
                app:ievdrwableleft="@drawable/icon_daoju"
                app:ievbackground="@color/white"
                app:ievtextColor="@color/all_3"
                android:layout_width="match_parent" android:layout_height="wrap_content"

        />

        <com.yjhh.common.view.ItemEntryView
                android:paddingLeft="4pt"
                android:paddingRight="4pt"
                android:id="@+id/iev_Collection"
                app:ievtextValue="我的收藏"
                app:ievdrwableleft="@drawable/icon_shoucang"
                app:ievbackground="@color/white" app:ievunderline="true"
                app:ievtextColor="@color/all_3"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:ievtextpadding="@dimen/sp_12"
        />


        <com.yjhh.common.view.ItemEntryView
                android:paddingLeft="4pt"
                android:paddingRight="4pt"

                android:id="@+id/iev_browse"
                app:ievunderline="true"
                app:ievtextValue="最近浏览"
                app:ievdrwableleft="@drawable/icon_zuijinliulan"
                app:ievbackground="@color/white" app:ievtextpadding="@dimen/sp_12"
                app:ievtextColor="@color/all_3"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <com.yjhh.common.view.ItemEntryView
                android:paddingLeft="4pt"
                android:paddingRight="4pt"
                android:id="@+id/iev_service"
                app:ievdrwableleft="@drawable/icon_bangzhu"
                app:ievtextValue="帮助中心" app:ievunderline="true"
                app:ievbackground="@color/white" app:ievtextpadding="@dimen/sp_12"
                app:ievtextColor="@color/all_3"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>


        <com.yjhh.common.view.ItemEntryView
                android:id="@+id/iev_about"
                app:ievtextValue="关于我们"
                android:paddingLeft="4pt"
                android:paddingRight="4pt"
                app:ievdrwableleft="@drawable/icon_guanyu"
                app:ievbackground="@color/white" app:ievtextpadding="@dimen/sp_12"
                app:ievtextColor="@color/all_3"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>



        <com.yjhh.common.view.ItemEntryView
                android:paddingLeft="4pt"
                android:paddingRight="4pt"
                android:id="@+id/iev_Invitation"
                app:ievdrwableleft="@drawable/icon_bangzhu"
                app:ievtextValue="邀新有礼" app:ievunderline="true"
                app:ievbackground="@color/white" app:ievtextpadding="@dimen/sp_12"
                app:ievtextColor="@color/all_3"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>


    </LinearLayout>


</androidx.core.widget.NestedScrollView>