<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent" android:layout_height="match_parent">


    <com.yjhh.common.view.TitleBarView
            android:id="@+id/tbv_title"
            app:textValue="忘记密码"
            app:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="48dp"/>

    <TextView android:layout_width="wrap_content" android:layout_height="30dp"
              android:id="@+id/tv_phone"
              android:layout_below="@+id/tbv_title"
              android:gravity="center"
              android:text="请输入手机号"
    />

    <EditText android:layout_width="match_parent" android:layout_height="30dp"
              android:id="@+id/et_phone"
              android:layout_below="@+id/tbv_title"
              android:background="@null"
              android:hint="请输入手机号"
              android:layout_toRightOf="@+id/tv_phone"
    />

    <TextView android:layout_width="wrap_content" android:layout_height="30dp"
              android:id="@+id/tv_password"
              android:gravity="center"

              android:layout_below="@+id/tv_phone"
              android:text="请输入密码"
    />

    <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent" android:layout_height="30dp"
            android:layout_below="@+id/et_phone"
            android:background="@null"
            android:hint="请输入密码"
            android:layout_toRightOf="@+id/tv_password"
    />





    <TextView
            android:layout_below="@+id/tv_password"
            android:text="请输入验证码"
            android:gravity="center"
            android:id="@+id/tv_verifyCode1"
            android:layout_width="wrap_content" android:layout_height="30dp"/>


    <EditText android:layout_width="match_parent" android:layout_height="30dp"
              android:layout_below="@+id/et_password"
              android:id="@+id/et_verifyCode"
              android:background="@null"
              android:hint="请输入验证码"
              android:layout_toLeftOf="@+id/tv_verifyCode"
              android:layout_toRightOf="@+id/tv_verifyCode1"
    />
    <TextView
            android:id="@+id/tv_verifyCode"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/et_password"
            android:text="获取验证码"
            android:gravity="center"
            android:textSize="10sp"
            android:layout_width="60dp" android:layout_height="30dp"/>


    <Button android:id="@+id/bt_commit"
            android:layout_below="@+id/et_verifyCode"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:layout_width="wrap_content" android:layout_height="wrap_content"
            android:text="确定"
    />

</RelativeLayout>