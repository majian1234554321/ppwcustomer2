<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:paddingLeft="16pt"
                android:paddingRight="16pt"
                android:layout_width="match_parent"
                android:layout_height="60pt">


    <ImageView
            android:layout_width="23pt"
            android:layout_height="23pt"

            android:layout_centerVertical="true"
            android:id="@+id/iv_image"
            android:src="@drawable/dingweien"
    />

    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:paddingLeft="6pt"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/iv_image"
                  android:layout_height="wrap_content">
        <TextView android:layout_width="match_parent"
                  android:text="万达汉街总部国际E楼"
                  android:textColor="#FF151515"
                  android:id="@+id/tv_name"
                  android:textSize="14pt"
                  android:paddingBottom="5pt"
                  android:layout_height="match_parent"/>
        <TextView android:layout_width="match_parent"
                  android:singleLine="true"
                  android:text="湖北省武汉市武昌区中南路街办事处中北路湖北省武汉市武..."
                  android:textColor="#FF666666"
                  android:id="@+id/tv_address"
                  android:textSize="12pt"
                  android:layout_height="match_parent"/>

    </LinearLayout>


</RelativeLayout>