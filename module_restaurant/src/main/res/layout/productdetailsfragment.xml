<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <com.yjhh.common.view.TitleBarView android:layout_width="match_parent"
                                       android:id="@+id/tbv_title"
                                       app:textValue="商品详情"
                                       android:layout_height="wrap_content"/>


    <RelativeLayout android:layout_width="match_parent"
                    android:layout_below="@+id/tbv_title"
                    android:paddingLeft="15pt"
                    android:paddingRight="15pt"
                    android:layout_height="match_parent">


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="21pt"
                android:text="火焰五拼寿司"
                android:id="@+id/tv_name"
                android:textColor="#FF333333"
                android:textSize="15pt"
        />


        <TextView
                android:layout_width="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_height="20pt"
                android:text="24"
                android:textColor="#FF333333"
                android:textSize="14pt"
        />


        <TextView
                android:layout_below="@+id/tv_name"
                android:paddingTop="6.5pt"
                android:layout_width="345pt"
                android:id="@+id/tv_info"
                android:layout_height="52.5pt"
                android:text="每天更换一次食材，每日套餐中米饭和素材随机搭配，并每天更换一次食材，每日套餐中米饭和素材随机搭配，并一次食材，每日套餐中米饭和素材随机搭配，并…"
                android:textColor="#FF666666"
                android:textSize="12pt"
        />


        <RelativeLayout android:layout_width="match_parent"
                        android:id="@+id/rl"
                        android:layout_below="@id/tv_info"
                        android:layout_height="wrap_content">

            <ImageView android:layout_width="40pt" android:layout_height="40pt"/>
            <ImageView android:layout_width="40pt" android:layout_height="40pt"/>

        </RelativeLayout>


        <com.youth.banner.Banner android:layout_width="325pt"
                                 android:layout_below="@+id/rl"
                                 android:id="@+id/banner"
                                 android:layout_height="325pt"/>


        <TextView
                android:layout_width="wrap_content"
                android:layout_height="26.5pt"
                android:layout_below="@+id/banner"
                android:layout_centerHorizontal="true"
                android:text="1/3"
                android:textColor="#FF333333"
                android:textSize="22pt"
        />


    </RelativeLayout>


</RelativeLayout>