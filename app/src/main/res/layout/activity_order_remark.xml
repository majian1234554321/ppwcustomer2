<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:zhy="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.takeout.OrderRemarkActivity">

    <com.yjhh.common.view.TitleBarView android:layout_width="match_parent"
                                       android:id="@+id/tbv_title"
                                       app:textValue="订单备注"
                                       app:textColor="@color/white"
                                       android:layout_height="wrap_content"/>

    <LinearLayout
            android:layout_below="@+id/tbv_title"
            android:orientation="vertical"
            android:layout_width="match_parent" android:layout_height="wrap_content">


        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="快速备注"
        />

        <com.zhy.view.flowlayout.TagFlowLayout
                android:id="@+id/history_flowlayout"
                zhy:max_select="-1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp">
        </com.zhy.view.flowlayout.TagFlowLayout>


        <TextView android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:text="备注"
        />

        <EditText android:layout_width="match_parent" android:layout_height="80dp"/>

        <TextView android:layout_width="120dp" android:layout_height="50dp"
                  android:layout_gravity="center"
                  android:gravity="center"
                  android:text="确认"
        />


    </LinearLayout>

</RelativeLayout>