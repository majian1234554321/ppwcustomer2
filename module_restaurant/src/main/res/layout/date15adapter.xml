<?xml version="1.0" encoding="utf-8"?>




<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content" xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/materialCardView"
        android:padding="8dp"
        app:cardCornerRadius="15pt"

        android:layout_height="wrap_content"
>

    <RelativeLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="wrap_content" xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"

            android:padding="8dp"

            android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_MD"
                  android:textColor="@color/selector_textcolor"
                  android:gravity="center"
                  android:layout_centerHorizontal="true"
                  tools:text="12"
                  android:layout_height="wrap_content"/>
        <TextView android:layout_width="wrap_content"
                  android:layout_marginTop="2dp"
                  android:layout_below="@+id/tv_MD"
                  android:id="@+id/tv_week"
                  android:textColor="@drawable/selector_tv_tab"
                  android:layout_centerHorizontal="true"
                  tools:text="12"
                  android:gravity="center"
                  android:layout_height="wrap_content"/>


    </RelativeLayout>

</com.google.android.material.card.MaterialCardView>



