<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:zhy="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
                android:background="@color/white"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">


    <RelativeLayout android:layout_width="match_parent"
                    android:id="@+id/rl_head"
                    android:layout_marginTop="10.5pt"
                    android:layout_height="wrap_content">

        <ImageView android:layout_width="26pt"
                   android:id="@+id/iv_image"
                   android:layout_marginLeft="15pt"
                   android:layout_centerVertical="true"
                   android:background="@color/colorPrimary"
                   android:layout_height="20pt"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/text"
                  android:text="美食"

                  android:textColor="#FF333333"
                  android:textSize="15pt"
                  android:gravity="center"
                  android:layout_marginLeft="47pt"
                  android:layout_height="21pt"/>
    </RelativeLayout>


    <View
            android:layout_marginTop="9.5pt"
            android:layout_marginLeft="47pt"
            android:layout_below="@+id/rl_head"
            android:layout_width="328pt"
            android:id="@+id/view"
            android:layout_height="0.5pt"
            android:background="#FFE6E6E6"
    />



    <com.zhy.view.flowlayout.TagFlowLayout

            android:layout_below="@+id/view"
            android:id="@+id/flowlayout"
            zhy:max_select="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="47pt"
           />

</RelativeLayout>