<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_marginLeft="30pt"
                android:layout_marginRight="15pt"
                android:layout_height="wrap_content">

    <View
            android:layout_width="345pt"
            android:layout_height="0.5pt" android:id="@+id/view"
            android:layout_marginBottom="10pt"
            android:background="#FFE6E6E6"
    />


    <ImageView android:layout_width="75pt"
               android:layout_below="@+id/view"
               android:id="@+id/iv_image"
               android:layout_marginRight="10pt"
               android:layout_height="75pt"/>

    <TextView
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_toRightOf="@+id/iv_image"
            android:layout_height="21pt"
            android:layout_alignTop="@+id/iv_image"
            android:id="@+id/tv_couName"
            android:text="拍拍味日料寿司豪华礼券"
            android:textColor="#FF333333"
            android:textSize="15pt"
    />


    <TextView
            android:layout_toRightOf="@+id/iv_image"
            android:layout_width="52.5pt"
            android:layout_marginTop="5pt"
            android:layout_height="18pt"
            android:layout_below="@+id/tv_couName"
            android:text="剩余13份"
            android:textColor="#FF666666"
            android:textSize="13pt"
    />


    <com.google.android.material.button.MaterialButton android:layout_width="wrap_content"
                                                       android:text="立即购买"
                                                       app:cornerRadius="25pt"
                                                       app:backgroundTint="#F9572D"
                                                       android:layout_alignBottom="@+id/iv_image"
                                                       android:layout_alignParentRight="true"
                                                       android:textColor="#FFFFFFFF"
                                                       android:textSize="14pt"
                                                       android:layout_height="wrap_content"/>


</RelativeLayout>