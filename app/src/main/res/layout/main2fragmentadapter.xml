<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tool="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                android:layout_height="match_parent">


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="肯德基（汉街店）"
              android:textColor="@color/colorPrimary"
              android:id="@+id/tv_storeName"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="待付款"

              android:layout_alignParentRight="true"
              android:id="@+id/tv_status"
    />


    <ImageView
            android:id="@+id/iv_image"
            android:src="@mipmap/ic_launcher"
            android:layout_below="@+id/tv_storeName"
            android:layout_width="80dp" android:layout_height="60dp"/>


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="草莓冰淇淋+薯条+可乐"
              android:layout_alignTop="@+id/iv_image"
              android:layout_toRightOf="@+id/iv_image"
              android:id="@+id/tv_goodName"
    />
    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="下单时间：2018-10-10 15:30"
              android:layout_toRightOf="@+id/iv_image"
              android:layout_below="@+id/tv_goodName"
              android:layout_above="@+id/tv_totalPrice"
              android:layout_alignParentRight="true"
              android:id="@+id/tv_orderName"
    />


    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
              tools:text="总价：¥ 38.00"
              android:layout_alignBottom="@+id/iv_image"
              android:layout_toRightOf="@+id/iv_image"
              android:id="@+id/tv_totalPrice"
    />

    <TextView android:layout_width="wrap_content"

                                                  android:id="@+id/mb_pay"
                                                  android:layout_alignParentRight="true"
                                                  android:layout_alignBottom="@+id/iv_image"
                                                  tools:text="付款"
                                                  android:layout_height="wrap_content"/>


</RelativeLayout>