<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">


        <RelativeLayout android:layout_width="match_parent"
                        android:layout_marginTop="24dp"
                        android:layout_height="wrap_content">


            <RelativeLayout android:layout_width="match_parent"
                            android:id="@+id/rl0"
                            android:padding="@dimen/sp_12"
                            android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profile_image"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@mipmap/ic_launcher"
                        app:civ_border_color="@color/colorPrimary"
                        app:civ_border_width="2dp"/>

                <TextView android:layout_width="match_parent"
                          android:id="@+id/tv_name"
                          android:layout_toLeftOf="@+id/iv_setting"
                          android:layout_toRightOf="@+id/profile_image"
                          android:paddingLeft="@dimen/sp_12"
                          android:text="未登录"
                          android:gravity="center_vertical"
                          android:layout_height="60dp"/>


                <ImageView android:layout_width="30dp"
                           android:src="@mipmap/ic_launcher"
                           android:id="@+id/iv_setting"

                           android:layout_centerVertical="true"
                           android:layout_alignParentRight="true"
                           android:layout_height="30dp"/>

            </RelativeLayout>


            <RelativeLayout android:layout_width="match_parent"
                            android:id="@+id/rl_buy"
                            android:layout_below="@+id/rl0"
                            android:layout_marginLeft="@dimen/sp_16"
                            android:layout_marginRight="@dimen/sp_16"
                            android:padding="@dimen/sp_12"
                            android:background="@drawable/roundedrectangle"
                            android:layout_height="wrap_content">


                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                          android:layout_alignParentRight="true"
                          android:text="立即购买，享8折起优惠"
                          android:id="@+id/tv_buy"
                />


            </RelativeLayout>


        </RelativeLayout>


        <LinearLayout android:layout_width="match_parent"
                      android:orientation="horizontal"
                      android:layout_marginTop="@dimen/sp_14"
                      android:layout_marginBottom="@dimen/sp_14"
                      android:layout_height="wrap_content">
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:drawableTop="@mipmap/ic_launcher"
                      android:layout_weight="1"
                      android:id="@+id/tv_Coupon"
                      android:gravity="center"
                      android:text="优惠券"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:drawableTop="@mipmap/ic_launcher"
                      android:layout_weight="1"
                      android:gravity="center"
                      android:id="@+id/tv_Integral"
                      android:text="金币"
            />
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                      android:drawableTop="@mipmap/ic_launcher"
                      android:layout_weight="1"
                      android:id="@+id/tv_Collection"
                      android:gravity="center"
                      android:text="收藏"
            />

        </LinearLayout>


        <com.yjhh.common.view.ItemEntryView
                android:id="@+id/iev_evaluate"
                app:ievtextValue="我的评价"
                app:ievunderline="true"
               app:ievtextpadding ="@dimen/sp_12"
                app:ievbackground="@color/white"
                app:ievtextColor="@color/all_9"
                android:layout_width="match_parent" android:layout_height="wrap_content"

        />


        <com.yjhh.common.view.ItemEntryView
                android:id="@+id/iev_message"
                app:ievtextValue="我的消息"
                app:ievunderline="true"
                app:ievtextpadding ="@dimen/sp_12"
                app:ievbackground="@color/white"
                app:ievtextColor="@color/all_9"
                android:layout_width="match_parent" android:layout_height="wrap_content"

        />

        <com.yjhh.common.view.ItemEntryView
                android:id="@+id/iev_browse"
                app:ievtextValue="最近浏览"
                app:ievbackground="@color/white"  app:ievunderline="true"
                app:ievtextColor="@color/all_9"
                android:layout_width="match_parent" android:layout_height="wrap_content"
                app:ievtextpadding ="@dimen/sp_12"
        />


        <com.yjhh.common.view.ItemEntryView
                android:id="@+id/iev_address"  app:ievunderline="true"
                app:ievtextValue="我的收货地址"
                app:ievbackground="@color/white" app:ievtextpadding ="@dimen/sp_12"
                app:ievtextColor="@color/all_9"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>

        <com.yjhh.common.view.ItemEntryView
                android:id="@+id/iev_service"
                app:ievtextValue="在线客服"  app:ievunderline="true"
                app:ievbackground="@color/white" app:ievtextpadding ="@dimen/sp_12"
                app:ievtextColor="@color/all_9"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>


        <com.yjhh.common.view.ItemEntryView
                android:id="@+id/iev_about"
                app:ievtextValue="关于我们"
                app:ievbackground="@color/white" app:ievtextpadding ="@dimen/sp_12"
                app:ievtextColor="@color/all_9"
                android:layout_width="match_parent" android:layout_height="wrap_content"/>





    </LinearLayout>


</android.support.v4.widget.NestedScrollView>