<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:padding="15pt" android:layout_width="match_parent"
                android:layout_height="wrap_content">


    <ImageView android:layout_width="90pt" android:layout_height="90pt"
               android:id="@+id/iv_image"
               android:layout_marginRight="10pt"
    />

    <TextView android:layout_width="wrap_content"
              android:layout_toRightOf="@+id/iv_image"
              android:id="@+id/tv_storeName"
              android:textColor="#FF333333"

              android:textSize="15pt"
              android:layout_height="wrap_content"
              tools:text="济州烤肉（汉街店）"
    />


    <RelativeLayout android:layout_width="match_parent"
                    android:paddingTop="4pt"
                    android:id="@+id/rl"
                    android:layout_toRightOf="@+id/iv_image"
                    android:layout_below="@+id/tv_storeName"
                    android:layout_height="wrap_content">
        <com.yjhh.common.view.RatingBar
                android:id="@+id/id_ratingbar"
                android:layout_width="100dp"
                android:layout_height="25dp"
                android:gravity="center"
                app:allStarsCount="5"
                app:curSelectValue="1.5"
                android:layout_centerVertical="true"
                app:starEmpty="@drawable/star_empty"
                app:starFill="@drawable/star_full"
                app:starHalf="@drawable/star_half_full"
                app:starImageSize="15dp"
                app:starPadding="5dp"
                app:clickable="false"
                app:stepSize="Half"/>

        <TextView android:layout_width="wrap_content"
                  android:id="@+id/tv_score"
                  android:text="12"
                  android:textColor="#FFF9572D"
                  android:textSize="12pt"
                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/id_ratingbar"
                  android:layout_height="wrap_content"/>


        <TextView android:layout_width="wrap_content"

                  android:layout_centerVertical="true"
                  android:layout_toRightOf="@+id/tv_score"

                  android:gravity="center"
                  android:id="@+id/tv_avgPrice"
                  android:layout_marginLeft="12dp"
                  android:textColor="#FF333333"
                  android:textSize="13pt"
                  android:layout_height="wrap_content"
                  tools:text="人均54元"
        />


        <TextView android:layout_width="wrap_content"
                  android:layout_centerVertical="true"
                  android:gravity="right"
                  android:id="@+id/tv_KM"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:textColor="#FF888888"
                  android:textSize="13pt"
                  tools:text="1.2KM"
        />

    </RelativeLayout>


    <TextView android:layout_width="wrap_content"
              android:layout_below="@+id/rl"
              android:layout_toRightOf="@+id/iv_image"

              android:layout_height="wrap_content"
              android:id="@+id/tv_info"
              tools:text="武昌区  韩式烤肉"
    />

    <RelativeLayout android:layout_width="match_parent"
                    android:layout_alignBottom="@+id/iv_image"
                    android:layout_toRightOf="@+id/iv_image"
                    android:layout_height="wrap_content">

        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:text="更多  >"
                  android:layout_centerVertical="true"
                  android:layout_alignParentRight="true"
                  android:textColor="#FFFE892F"
                  android:textSize="11pt"
        />

        <RelativeLayout android:layout_width="41pt"
                        android:id="@+id/rl001"
                        android:background="@drawable/quan"
                        android:layout_height="20pt">

            <TextView android:layout_width="wrap_content"
                      android:text="100"
                      android:layout_centerInParent="true"
                      android:textColor="#FFFFFFFF"
                      android:textSize="13pt"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>


        <RelativeLayout android:layout_width="41pt"
                        android:id="@+id/rl002"
                        android:layout_toRightOf="@+id/rl001"
                        android:layout_marginLeft="12.5pt"
                        android:layout_marginRight="12.5pt"
                        android:background="@drawable/quan"
                        android:layout_height="20pt">

            <TextView android:layout_width="wrap_content"
                      android:text="100"
                      android:layout_centerInParent="true"
                      android:textColor="#FFFFFFFF"
                      android:textSize="13pt"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>


        <RelativeLayout android:layout_width="41pt"
                        android:layout_toRightOf="@+id/rl002"
                        android:id="@+id/rl003"
                        android:background="@drawable/quan"
                        android:layout_height="20pt">

            <TextView android:layout_width="wrap_content"
                      android:text="100"
                      android:layout_centerInParent="true"
                      android:textColor="#FFFFFFFF"
                      android:textSize="13pt"
                      android:layout_height="wrap_content"/>

        </RelativeLayout>


    </RelativeLayout>


</RelativeLayout>